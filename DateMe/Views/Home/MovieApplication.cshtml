@model MovieDB.Models.MovieApp

<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Title, "CategoryId", "CategoryName"))">
        <option value="">Select Movie Title</option>
    </select>
    <span asp-validation-for="CategoryId"></span>
    <br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>
    <br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" type="number" />
    <span asp-validation-for="Year"></span>
    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />
    <span asp-validation-for="Director"></span>
    <br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <span asp-validation-for="Rating"></span>
    <br />

    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="Edited"></span>
    <br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <span asp-validation-for="LentTo"></span>
    <br />

    <label asp-for="CopiedToPlex">Copied to Plex:</label>
    <input asp-for="CopiedToPlex" />
    <span asp-validation-for="CopiedToPlex"></span>
    <br />

    <label asp-for="Notes">Notes (max 25 characters):</label>
    <input asp-for="Notes" maxlength="25" />
    <span asp-validation-for="Notes"></span>
    <br />
    <br />

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>
</form>
